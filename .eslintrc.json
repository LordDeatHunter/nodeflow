{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:solid/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "solid"
  ],
  "rules": {
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "block-scoped-var": "error",
    "no-duplicate-imports": "error",
    "no-lonely-if": "error",
    "no-unneeded-ternary": "error",
    "no-useless-return": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-const": "error",
    "semi": [
      "error",
      "always"
    ],
    "yoda": [
      "warn",
      "never",
      {
        "exceptRange": true
      }
    ]
  }
}
